<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="waka1" value=<%= blog.title %>>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="waka2" value=<%= blog.image %>>
        </div>
        <div class="field">
            <label>Post</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui blue basic big button" type="submit">Submit</button>
    </form>
</div>


<%- include("partials/footer") %>