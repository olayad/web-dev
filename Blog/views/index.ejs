<%- include("partials/header") %>
<div class="ui main text container segment   ">



    <% blogs.forEach(function(blog){ %>
        <div class="ui container text">
            <h2> <%= blog.title %> </h2>
            <img class="ui fluid image" src="<%= blog.image %>">
            <span id="date"> <strong> <%= blog.created.toDateString() %> </strong></span>
            <p> <%= blog.body.substring(0, 200) %>... </p>
            <a href="/blogs/<%= blog._id %>" class="ui blue basic button" type="submit">Read more</a>
        </div>
    <% }); %>
</div>

<%- include("partials/footer") %>