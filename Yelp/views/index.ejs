<%- include("partials/header") %>

<div class="container pt-3">

    <header class="jumbotron border border-primary bg-white blue">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12 blue">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row pt-4">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 pb-4">
                <div class="card h-100 border--aqua" >
                    <img class="card-img-top"  src="<%= campground.image %>">
                    <div class="card-body bg-aqua text-center">
                        <h4 class="card-title align-middle navy"> <%= campground.name %> </h4>
                        <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary white ">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("partials/footer") %>